<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example</groupId>
    <artifactId>demo-javapreprocessing-multirelease4</artifactId>
    <packaging>jar</packaging>
    <version>0.0.7-SNAPSHOT</version>

    <properties>
        <target.java.version>21</target.java.version>
        <maven.compiler.source>${target.java.version}</maven.compiler.source>
        <maven.compiler.target>${target.java.version}</maven.compiler.target>
        <maven.compiler.release>${target.java.version}</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <exec.mainClass>demo4.App</exec.mainClass>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>2.0.9</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.4.11</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.30</version>
            <scope>provided</scope>
        </dependency>
        
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>5.10.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <version>5.10.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>5.10.1</version>
            <scope>test</scope>
        </dependency>
        
    </dependencies>
    
    <build>
        
        <pluginManagement>
            <plugins>
                
                <plugin>
                    <groupId>net.revelc.code.formatter</groupId>
                    <artifactId>formatter-maven-plugin</artifactId>
                    <!-- 2.16.0 is the latest version that still supports Java 8 -->
                    <version>2.16.0</version>
                    <configuration>
                        <!--<skip>true</skip>-->
                        <lineEnding>LF</lineEnding>
                        <directories>
                            <directory>${project.build.sourceDirectory}</directory>
                            <directory>${project.build.sourceDirectory}/../java-templates</directory>
                            <directory>${project.build.directory}/generated-sources</directory>
                            <directory>${project.build.testSourceDirectory}</directory>
                        </directories>
                    </configuration>
                    <executions>
                        <!-- intentional, so the sources are formatted before processing
                        and then again in case processing mangled the formatting in some weird way -->
                        <execution>
                            <id>format-initialize</id>
                            <goals>
                                <goal>format</goal>
                            </goals>
                            <phase>initialize</phase>
                        </execution>
                        <execution>
                            <id>format-process-sources</id>
                            <goals>
                                <goal>format</goal>
                            </goals>
                            <phase>process-sources</phase>
                        </execution>
                    </executions>
                </plugin>
                
            </plugins>
        </pluginManagement>
        
        <plugins>
            
            <plugin>
                <groupId>net.revelc.code.formatter</groupId>
                <artifactId>formatter-maven-plugin</artifactId>
            </plugin>
  
            <plugin>
                <groupId>com.igormaznitsa</groupId>
                <artifactId>jcp</artifactId>
                <version>7.0.5</version>
                <executions>
                    <execution>
                        <id>preprocessSources-java8</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>preprocess</goal>
                        </goals>
                        <configuration>
                            <replaceSources>false</replaceSources>
                            <target>${project.build.directory}/generated-sources/preprocessed-java8</target>
                            <vars>
                                <target.java.version>8</target.java.version>
                            </vars>
                        </configuration>
                    </execution>
                    <execution>
                        <id>preprocessSources-java21</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>preprocess</goal>
                        </goals>
                        <configuration>
                            <target>${project.build.directory}/generated-sources/preprocessed-java21</target>
                            <replaceSources>false</replaceSources>
                            <vars>
                                <target.java.version>21</target.java.version>
                            </vars>
                        </configuration>
                    </execution>
                    <execution>
                        <id>preprocess-test-sources-java8</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>preprocess</goal>
                        </goals>
                        <configuration>
                            <useTestSources>true</useTestSources>
                            <replaceSources>false</replaceSources>
                            <sources>
                                <src>${project.build.testSourceDirectory}</src>
                            </sources>
                            <targetTest>${project.build.directory}/generated-test-sources/preprocessed-java8</targetTest>
                            <vars>
                                <target.java.version>8</target.java.version>
                            </vars>
                        </configuration>                    
                    </execution>
                    <execution>
                        <id>preprocess-test-sources-java21</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>preprocess</goal>
                        </goals>
                        <configuration>
                            <targetTest>${project.build.directory}/generated-test-sources/preprocessed-java21</targetTest>
                            <replaceSources>false</replaceSources>
                            <useTestSources>true</useTestSources>
                            <vars>
                                <target.java.version>21</target.java.version>
                            </vars>
                        </configuration>                    
                    </execution>
                </executions>
                <configuration>
                    <!--<verbose>true</verbose>-->
                    <replaceSources>false</replaceSources>
                    <allowWhitespaces>true</allowWhitespaces>
                    <dontOverwriteSameContent>true</dontOverwriteSameContent>
                    <keepComments>true</keepComments>
                </configuration>
            </plugin>
            
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <executions>
                    <execution>
                        <id>default-compile</id>
                        <phase></phase>
                    </execution>
                    <execution>
                        <id>default-testCompile</id>
                        <phase></phase>
                    </execution>
                    <execution>
                        <id>compile-java21</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <compileSourceRoots>
                                <src>${project.build.directory}/generated-sources/preprocessed-java21</src>
                            </compileSourceRoots>
                            <source>21</source>
                            <target>21</target>
                            <release>21</release>
                            <multiReleaseOutput>true</multiReleaseOutput>
                        </configuration>
                    </execution>
                    <execution>
                        <id>compile-java8</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <compileSourceRoots>
                                <src>${project.build.directory}/generated-sources/preprocessed-java8</src>
                            </compileSourceRoots>
                            <source>8</source>
                            <target>8</target>
                            <release>8</release>
                        </configuration>
                    </execution>
                    <execution>
                        <id>testCompile-java21</id>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                        <configuration>
                            <compileSourceRoots>
                                <src>${project.build.directory}/generated-test-sources/preprocessed-java21</src>
                            </compileSourceRoots>
                            <outputDirectory>${project.build.directory}/test-classes-java21</outputDirectory>
                            <source>21</source>
                            <target>21</target>
                            <release>21</release>
                        </configuration>
                    </execution>
                    <execution>
                        <id>testCompile-java8</id>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                        <configuration>
                            <compileSourceRoots>
                                <src>${project.build.directory}/generated-test-sources/preprocessed-java8</src>
                            </compileSourceRoots>
                            <outputDirectory>${project.build.directory}/test-classes-java8</outputDirectory>
                            <source>8</source>
                            <target>8</target>
                            <release>8</release>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <compilerArgs>
                        <!--<arg>-Xlint:-options</arg>-->
                    </compilerArgs>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <archive>                        
                        <manifestEntries>
                            <Multi-Release>true</Multi-Release>
                            <Main-Class>demo4.App</Main-Class>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.2</version>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase></phase>
                    </execution>
                    <execution>
                        <id>test-java21</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <classesDirectory>${project.build.directory}/classes/META-INF/versions/21</classesDirectory>
                            <testClassesDirectory>${project.build.directory}/test-classes-java21</testClassesDirectory>
                            <!--<reportsDirectory>${project.build.directory}/surefire-reports-java21</reportsDirectory>-->
                            <reportNameSuffix>java21</reportNameSuffix>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-java8</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <classesDirectory>${project.build.directory}/classes</classesDirectory>
                            <testClassesDirectory>${project.build.directory}/test-classes-java8</testClassesDirectory>
                            <!--<reportsDirectory>${project.build.directory}/surefire-reports-java8</reportsDirectory>-->
                            <reportNameSuffix>java8</reportNameSuffix>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <detail>true</detail>
                </configuration>
            </plugin>  
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
         
        </plugins>
    </build>
    
</project>
